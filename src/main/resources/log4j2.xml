<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="Skibidyy" packages="com.g1planificadorpgg">
    <Appenders>
        <File name="FileLogger" fileName="./src/main/resources/log.txt" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>
