<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.g1planificadorpgg.Controllers.RegisterController" stylesheets="@CSS/login.css" alignment="CENTER" spacing="15.0" prefHeight="400.0" prefWidth="600.0" styleClass="vbox-padding">
    <children>
            <VBox alignment="CENTER" spacing="10" styleClass="container">
        <Label text="Register" styleClass="title"/>

        <Label text="User" />
        <TextField fx:id="usernameTextInput" styleClass="text-field"/>

        <Label text="Password" />
        <PasswordField fx:id="passwordInput" styleClass="text-field"/>

        <Label text="Confirm Password" />
        <PasswordField fx:id="confirmPasswordInput" styleClass="text-field"/>

        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#register" text="Register" styleClass="login-button"/>
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToLogin" text="Back to Login" styleClass="login-button"/>
            
            </VBox>
        </children>

</VBox>
